<div class="container">
  <div class="row">
    <div class="col-md-8 background-white">
      <div class="page-header"><h1>#<%= @offer.category.downcase %>: <%= @offer.title %></h1></div>
        <div class="row">
          <div class="col-md-4">
            <%= image_tag @offer.user.picture, class: "img-responsive bordered" %>
          </div>
          <div class="col-md-8">
            <dl class="dl-horizontal">
              <dt>Creator</dt>
              <dd><%= @offer.user.name %></dd>
              <hr>
              <dt>Level</dt>
              <dd><%= @offer.seniority.capitalize %></dd>
              <hr>
              <dt>Description</dt>
              <dd><%= @offer.description %></dd>
            </dl>
          </div>
    </div>
    </div>
    <div class="col-md-3 col-md-offset-1">
      <%= render 'offers/booking_form' %>
    </div>
  </div>

</div>

<p> Location: <%= @offer.location %> </p>
